#playlists_import {
  h1 {
    line-height: 1.0em;
  }
  small {
    font-size: 13px;
    margin-bottom: 5px;
    display: block;
  }
  #playlist_input {
    margin: 10px 0px;
    float: left;
    width: 49%;
    textarea {
      width: 100%;
      height: 400px;
    }
  }
  #playlist_render {
    margin: 10px 0px;
    float: right;
    width: 49%;
    #main_details {
      background: #c2c2c2;
      padding: 10px;
      h3 {
        font-size: 12px;
        span {
          text-decoration: underline;
        }
      }
    }
    #description {
      background: #d5d5d5;
      padding: 10px;
    }
    ul {
      padding: 0px 0px 0px 20px;
      border-top: 1px solid #999;
      li {
        padding: 5px 0px 0px 5px;
        border-bottom: 1px solid #999;
        span.number {
          color: #000;
          font-size: 14px;
          line-height: 16px;
          font-weight: normal;
          margin-right: 5px;
        }
        span.icon {
          margin: 1px 5px 1px 1px;
          position: relative;
          top: 2px;
        }
        div.name {
          font-weight: bold;
          font-size: 16px;
          line-height: 16px;
        }
      }
      li.last-li {
        border-bottom: 0px;
        padding-bottom: 0px;
      }
      li.has_error {
        background: #FF9999;
        .error-description {
          font-style: italic;
        }
      }
    }
    ul#root {
      background: #FFF;
      margin: 0px;
      padding: 4px;
      border-top: none;
      li:first {
        border-top: none;
      }
    }
  }
  #import_playlist {
    clear: right;
    float: right;
  }
  #import_playlist.inactive {
    background: #c2c2c2;
    opacity: 0.7;
  }
  #success_message {
    clear: right;
    float: right;
    color: red;
    font-style: italic;
    a {
      color: red;
    }
  }
}
