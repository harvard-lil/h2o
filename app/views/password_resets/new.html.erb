<header class="users">
  <div class="content">
    <h1>
      <%= t 'users.reset-password.header' %>
    </h1>
  </div>
</header>
<section class="reset-password">
  <div class="content">
    <div class="layout">
      <div class="form">
        <%= simple_form_for :user, url: password_resets_path do |f| %>
          <%= f.input :email_address, input_html: {value: params.fetch(:email_address, '')} %>
          <%= f.button :submit, t('simple_form.labels.user.reset-password') %>
          <%= f.hint t 'users.reset-password.terms-of-service.html', terms_path: root_path %>
        <% end %>
      </div>
      <div class="help">
        <p>
          <%= t 'users.reset-password.help.html' %>
        </p>
      </div>
    </div>
  </div>
</section>
