<header class="users">
  <div class="content">
    <h1>
      <% if @user.password.present? %>
        <%= t 'users.change-password.header' %>
      <% else %>
        <%= t 'users.set-password.header' %>
      <% end %>
    </h1>
  </div>
</header>


<section class="reset-password">
  <div class="content">
    <div class="layout">
      <div class="form">
        <%= simple_form_for @user, url: password_reset_path do |f| %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.button :submit, t('simple_form.labels.user.save-password') %>
        <% end %>
      </div>
    </div>
  </div>
</section>