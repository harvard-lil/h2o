<div>
  <div id="error_block" style="display:none;" class="error"></div>
  <h3 id="generic_title"><%= (@case_court.new_record?) ? 'Create a Case Jurisdiction' : "Edit \"#{@case_court.name}\"" %></h3>
  <%= semantic_form_for(@case_court, :html => {:id => 'case_court-form'}) do |form| %>
    <%= form.inputs do %>
      <%= form.input :name %>
      <%= form.input :abbreviation %>
      <% unless request.xhr? %>
      <%= form.input :content, :as => :text, :required => false %>
      <% end %>
    <% end %>
  <% end %>
</div>
<div class="clear"></div>
