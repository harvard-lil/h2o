<% if flash[:notice] %>
	<div class='notice'><%= flash[:notice] %></div>
<% end %>

<% if flash[:error] %>
	<div class='error'><%= flash[:error] %></div>
<% end %>

<div class='standard-form cap-api-import-search-form'>
  <%= form_for :cap_api_import, method: 'get', html: { class: 'formtastic' } do |f| %>
    <%= f.label :name %><%= f.text_field :name %><br />
    <%= f.label :citation %><%= f.text_field :citation %><br />
    <%= f.submit 'Search', class: 'button' %>
  <% end %>
</div>

<% if @cases %>
  <%= render :partial => 'cases' %> 
<% end %>
