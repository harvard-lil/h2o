

<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %><br />

    
  <%= oauth_login_button :value => "Login with Twitter" %><br />


<% end %>

<p>
<div class="p20"><b><%= link_to "If you don't have a login, please register by clicking here.", new_user_path %></b></div>
</p>