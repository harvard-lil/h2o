<header class="dashboard">
  <div class="content">
    <div class="content-inner">
      <%= render 'content/search' %>
    </div>
  </div>
</header>
<section class="dashboard">
  <div class="content">
    <% if @user == current_user %>
      <h2 class="casebooks">
        <%= 'Your Casebooks' %>
      </h2>
      <hr class="owned"/>
    <%= render partial: 'content/dashboard/content_browser', locals: {content: @user.casebooks.owned, section: 'owned'} %>
    <% else %>
      <h2 class="casebooks">
        <%= "#{@user.attribution}'s Casebooks" %>
      </h2>
      <hr class="owned"/>
      <%= render partial: 'content/dashboard/content_browser', locals: {content: @user.casebooks.owned.published, section: 'owned'} %>
    <% end %>
  </div>
</section>
