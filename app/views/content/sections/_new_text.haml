= simple_form_for :text, url: casebook_section_index_path(@casebook), method: :post do |f|
  - if @section.present?
    = f.input :parent, as: :hidden, input_html: {value: @section.ordinal_string}
  = f.input :content, as: :text, placeholder: t('simple_form.labels.text.content'), label: false
  = f.submit t('simple_form.labels.text.save')
