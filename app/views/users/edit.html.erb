<header class="users">
  <div class="content">
    <h1>
      <%= t 'users.edit-profile.header' %>
    </h1>
  </div>
</header>
<section class="sign-up">
  <div class="content">
    <div class="layout">
      <% if !@user.verified && Rails.configuration.disable_verification %>
        <div class="form">
          <%= button_to t('users.self-verify'), user_path(@user), method: :patch, params: {user: {verified: true}}, class: 'btn btn-default' %>
        </div>
      <% end %>
      <div class="form">
        <%= simple_form_for @user, url: user_path(@user), html: {data: {remote: true}} do |f| %>
          <div class="error-transition <%= @user.errors.any? ? '' : 'hide' %>"><%= f.error_notification %></div>
            <%= f.input :email_address, hint: t('users.sign-up.edu-only_html') %>
            <%= f.input :image %>
            <%= f.input :attribution %>
            <%= f.input :affiliation %>
            <%= f.button :submit, t('simple_form.labels.user.save-changes') %>
          </div>
        <% end %>
      </div>
      <h3><%= t 'users.change-password.header' %></h3>
      <div class="form">
        <%= simple_form_for @user, url: user_path(@user), html: {data: {remote: true}} do |f| %>
          <%= f.input :current_password, required: true %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.button :submit, t('simple_form.labels.user.change-password') %>
        <% end %>
      </div>
      <!-- <div class="pitch">
        <h2>
          <%= t 'users.sign-up.pitch.header' %>
        </h2>
        <ul>
          <% t('users.sign-up.pitch.features').each do |feature| %>
            <li>
              <%= feature %>
            </li>
          <% end %>
        </ul>
      </div> -->
    </div>
  </div>
</section>
